{
  "youtube": {
    "description": "Search YouTube videos using keywords",
    "parameters": {
      "type": "object",
      "properties": {
        "query": {
          "type": "string",
          "description": "Search keyword"
        },
        "maxResults": {
          "type": "integer",
          "default": 3,
          "description": "Number of results"
        }
      }
    },
    "tool": {
      "type": "stdio",
      "command": {
        "command": "node",
        "args": ["dist/cli.js", "${query}"],
        "workingDirectory": "../youtube-mcp-server",
        "env": {
          "YOUTUBE_API_KEY": "YOUTUBE_API_KEY"
        }
      }
    }
  }
}